<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/fragment"
        android:layout_height="80dp">

        <ImageView
            android:id="@+id/image_car"
            android:layout_width="120dp"
            android:layout_height="70dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/textSpacerNoTitle"
            />

        <TextView
            android:id="@+id/textSpacerNoTitle"
            android:layout_width="10dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/image_car"
            app:layout_constraintRight_toLeftOf="@id/name_car"
        />
        <TextView
            android:id="@+id/name_car"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/price_car"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/textSpacerNoTitle"
            app:layout_constraintRight_toRightOf="parent"/>
        <TextView
            android:id="@+id/price_car"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/name_car"
            app:layout_constraintLeft_toRightOf="@id/textSpacerNoTitle"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/category_car"
            />
        <TextView
            android:id="@+id/category_car"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/price_car"
            app:layout_constraintLeft_toRightOf="@id/textSpacerNoTitle"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>